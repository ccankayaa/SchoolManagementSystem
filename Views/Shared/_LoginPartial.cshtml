@using Microsoft.AspNetCore.Identity
@using SchoolManagementSystem.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="col-md-3 text-end">
    @if (SignInManager.IsSignedIn(User))
    {

                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!></a>

                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-primary">Logout</button>
                </form>

    }else
    {
        <a class="btn btn-outline-primary me-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }

</div>
